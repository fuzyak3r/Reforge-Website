{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "routes": [
    { "src": "/api/auth/steam", "dest": "/api/auth/login.js" },
    { "src": "/api/auth/steam/return", "dest": "/api/auth/steam/return.js" },
    { "src": "/api/auth/user", "dest": "/api/auth/user.js" },
    { "src": "/api/players", "dest": "/api/players.js" },
    { "src": "/api/inventory", "dest": "/api/inventory.js" },
    { "src": "/api/open-case", "dest": "/api/open-case.js" },
    { "src": "/api/verify-player-data", "dest": "/api/verify-player-data.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}